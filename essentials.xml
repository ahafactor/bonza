	<applet name="menu-item" id="id">
		<output>
			<string/>
		</output>
		<state name="state">
			<all>
				<prop name="text">
					<string/>
				</prop>
				<prop name="id">
					<string/>
				</prop>
				<any>
					<prop name="up" />
					<prop name="down" />
				</any>
			</all>
		</state>
		<content>
			<calc>
				<text>
					<div class="[%class%]">[%state.text%]</div>
				</text>
				<where>
					<any>
						<all>
							<is>state.up</is>
							<def var="class">
								"menu-item-inactive"
							</def>
						</all>
						<all>
							<is>state.down</is>
							<def var="class">
								"menu-item-active"
							</def>
						</all>
					</any>
				</where>
			</calc>
		</content>
		<init arg="arg">
			<state>
				<calc>
					state
					<where>
						<any>
							<all>
								<is>charAt({str: text, index: 0}) = "!"</is>
								<def var="state">
									{id: id, text: substr({str: text, start: 1, rest:}), down:}
								</def>
							</all>
							<def var="state">
								{id: id, text: text, up:}
							</def>
						</any>
					</where>
					<where>
						<all>
							<def var="pos">
								indexOf({str: arg, substr: ":"})
							</def>
							<def var="text">
								substr({str: arg, start: 0, end: pos})
							</def>
							<def var="id">
								substr({str: arg, start: pos + 1, rest: })
							</def>
						</all>
					</where>
				</calc>
			</state>
		</init>
		<respond>
			<input name="input">
				<any>
					<prop name="do" />
					<prop name="up" />
					<prop name="down" />
				</any>
			</input>
			<state>
				<calc>
					newstate
					<where>
						<any>
							<all>
								<is>input.up</is>
								<def var="newstate">
									{id: state.id, text: state.text, up:}
								</def>
							</all>
							<all>
								<is>input.down</is>
								<def var="newstate">
									{id: state.id, text: state.text, down:}
								</def>
							</all>
							<def var="newstate">
								state
							</def>
						</any>
					</where>
				</calc>
			</state>
			<after>
				<calc>
					action
					<where>
						<any>
							<all>
								<is>input.do</is>
								<def var="action">
									<output>state.id</output>
								</def>
							</all>
							<def var="action">
								<redraw/>
							</def>
						</any>
					</where>
				</calc>
			</after>
		</respond>
		<events>
			<click>
				<calc>
					{do:}
					<where>
						<is>state.up</is>
					</where>
				</calc>
			</click>
		</events>
		<accept data="data">
			<from applet="menu-bar">
				<calc>
					input
					<where>
						<any>
							<all>
								<is>data.up = state.id</is>
								<def var="input">
									{up:}
								</def>
							</all>
							<all>
								<is>data.down = state.id</is>
								<def var="input">
									{down:}
								</def>
							</all>
						</any>
					</where>
				</calc>
			</from>
			<from applet="page-menu">
