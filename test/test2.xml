<library>
	<type name="test">
		<dictionary><string/></dictionary>
	</type>
	<common>
		<def var="myfunc">
			<func>
				<arg name="arg1">
					<string/>
				</arg>
				<return>
					<text>
						[%arg1%] etc.
					</text>
				</return>
			</func>
		</def>
	</common>
	<applet name="test">
		<output>
			<string/>
		</output>
		<state name="state">
			<all>
				<prop name="id">
					<string/>
				</prop>
				<prop name="text">
					<string/>
				</prop>
			</all>
		</state>
		<content>
			<invalid><string/></invalid>
		</content>
		<init id="id" content="text">
			<state>{id: id, text: text}</state>
			<actions>
				<input>{test:}</input>
				<redraw/>
			</actions>
		</init>
		<respond>
			<input name="input">
				<any>
					<prop name="test"/>
				</any>
			</input>
			<state>state</state>
			<actions>
				<redraw/>
			</actions>
		</respond>
		<events data="data">
			<click>{test:}</click>
		</events>
	</applet>
	<applet name="test2">
		<output>
			<string/>
		</output>
		<state name="state">
			<all>
				<prop name="id">
					<string/>
				</prop>
				<prop name="text">
					<string/>
				</prop>
			</all>
		</state>
		<content>
			<text><script>alert('Hello, World!');</script></text>
		</content>
		<init id="id" content="text">
			<state>
				<list>
					<calc>1</calc>
					<calc>2</calc>
					<calc>3</calc>
				</list>							
			</state>
		</init>
		<respond>
			<input name="input">
				<any>
					<prop name="test"/>
				</any>
			</input>
			<state>state</state>
			<actions>
				<redraw/>
			</actions>
		</respond>
		<events data="data">
			<click>{test:}</click>
		</events>
	</applet>
</library>
